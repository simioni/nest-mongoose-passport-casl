{
  "name": "nest-pret",
  "version": "1.1.2",
  "description": "A production-ready NestJS starting project with a full auth module containing registration, email verification, password recovery, claims-based access control, standardized and paginated responses, OpenAPI auto-documentation and more.",
  "author": "Ricardo Simioni",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/simioni/nest-pret/issues"
  },
  "homepage": "https://github.com/simioni/nest-pret#readme",
  "schematics": "./cli/schematics/collection.json",
  "engines": {
    "node": ">= 16.14"
  },
  "bin": {
    "nest": "bin/nest-pret.js"
  },
  "scripts": {
    "dev": "docker-compose up --build -d",
    "build": "nest build",
    "deploy": "scripts/deploy.sh",
    "deploy:registry": "docker service create --name registry --publish published=5000,target=5000 registry:2",
    "prod": "docker compose -f docker-stack.yml up",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "e2e": "docker-compose -f docker-compose.test.yml up --abort-on-container-exit --exit-code-from api --attach api --no-log-prefix",
    "e2e:watch": "TEST_ARG=--watch npm run e2e",
    "e2e:down": "docker-compose -f docker-compose.test.yml down --rmi local -v",
    "poste2e": "npm run e2e:down",
    "test:e2e": "jest --config test/config/jest.config.e2e.ts",
    "prebuild:cli": "npm run publishSchematics && npm run updateSchematics",
    "build:cli": "tsc -p tsconfig.cli.json",
    "build:cli:only": "tsc -p tsconfig.cli.json",
    "publishSchematics": "cd schematics && npm run pub",
    "updateSchematics": "npm i nest-pret-schematics@latest",
    "postdev": "npm run --silent welcome",
    "welcome": "node -e \"console.log('App will be available in a few seconds here: \\n\\nðŸ‘‰ API docs: http://localhost:3000/dev-tools/docs\\nðŸ”¥ App graph: http://localhost:3000/dev-tools/graph\\n')\""
  },
  "dependencies": {
    "@casl/ability": "^6.5.0",
    "@faker-js/faker": "^8.2.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.1.1",
    "@nestjs/mapped-types": "*",
    "@nestjs/mongoose": "^10.0.1",
    "@nestjs/passport": "^10.0.2",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.1.12",
    "@nestjs/throttler": "^5.0.1",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "commander": "4.1.1",
    "helmet": "^7.0.0",
    "mongoose": "^7.6.3",
    "nest-standard-response": "^1.2.3",
    "nodemailer": "^6.9.7",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@golevelup/ts-jest": "^0.4.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^5.0.1",
    "@types/bcryptjs": "^2.4.4",
    "@types/express": "^4.17.17",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/nodemailer": "^6.4.13",
    "@types/passport-jwt": "^3.0.11",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "copyfiles": "^2.4.1",
    "dotenv": "^16.3.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "inquirer": "8.2.6",
    "jest": "^29.5.0",
    "jest-environment-node": "^29.7.0",
    "lodash": "^4.17.21",
    "mongodb-memory-server": "^9.1.1",
    "nest-pret-schematics": "^0.10.13",
    "nestjs-spelunker": "^1.3.0",
    "pactum": "^3.5.1",
    "prettier": "^2.8.8",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
